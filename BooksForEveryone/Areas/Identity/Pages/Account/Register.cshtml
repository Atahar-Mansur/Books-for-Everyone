@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-10">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-md-5">
                @*Change*@
                
                <div class="form-group">
                    <label asp-for="Input.Name"></label>
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.MobileNumber"></label>
                    <input asp-for="Input.MobileNumber" class="form-control" />
                    <span asp-validation-for="Input.MobileNumber" class="text-danger"></span>
                </div>
                @*End Change*@

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-2"><br/></div>
            <div class="col-md-5">
                @*Change*@

                <div class="form-group">
                    <label class="label-info">Preasent Address</label><br />
                    <label asp-for="Input.Address"></label>
                    <input asp-for="Input.Address" class="form-control" />
                    <span asp-validation-for="Input.Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.ZipCode"></label>
                    <input asp-for="Input.ZipCode" class="form-control" />
                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.AreaThana"></label>
                    <input asp-for="Input.AreaThana" class="form-control" />
                    <span asp-validation-for="Input.AreaThana" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.District"></label>
                    <input asp-for="Input.District" class="form-control" />
                    <span asp-validation-for="Input.District" class="text-danger"></span>
                </div>
            </div>

            <div class="col-md-12">
                <div class="form-group">
                    <h4 class="text-primary">Book(s) that you want to share through this site</h4>
                </div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="label-info">Book-1</label><br />
                        <label asp-for="Input.Book1Name"></label>
                        <input asp-for="Input.Book1Name" class="form-control" />
                        <span asp-validation-for="Input.Book1Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Book1WriName"></label>
                        <input asp-for="Input.Book1WriName" class="form-control" />
                        <span asp-validation-for="Input.Book1WriName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-2"><br /></div>
                <div class="col-md-5">
                    <div class="form-group">
                        <label class="label-info">Book-2</label><br />
                        <label asp-for="Input.Book2Name"></label>
                        <input asp-for="Input.Book2Name" class="form-control" />
                        <span asp-validation-for="Input.Book2Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Book2WriName"></label>
                        <input asp-for="Input.Book2WriName" class="form-control" />
                        <span asp-validation-for="Input.Book2WriName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <button type="submit" class="btn btn-success">Register</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
